{
  "AllowedHosts": "*",
  "AWS": {
    "Region": "us-east-1"
  },
  "PostgreSQL": {
    "ConnectionString": "Host=localhost;Port=5432;Database=db-spw;Username=admin;Password=integrated-test-pwd"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.AwsCloudWatch"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "AwsCloudWatch",
        "Args": {
          "logGroup": "/aws/lambda/SPWAdminApi",
          "region": "us-east-1",
          "logStreamName": "{yyyy-MM-dd-HH}"
        }
      }
    ]
  }
}